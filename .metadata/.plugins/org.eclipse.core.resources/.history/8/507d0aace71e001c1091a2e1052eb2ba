package practice;

public class Pyramid {
		
		public void pyramid (int n) {
			int i, j;
			for(i=1; i<=n; i++) {
				for(j=i-1; i<=i; j++) {
					System.out.println("*");
				}
				System.out.println("\n");
			}
		}
		
		
	
	public static void main(String[] args) {
		
			Pyramid py = new Pyramid();
			py.pyramid(0);
	}

}
